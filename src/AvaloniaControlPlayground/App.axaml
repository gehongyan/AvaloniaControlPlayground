<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AvaloniaControlPlayground.App"
             xmlns:local="using:AvaloniaControlPlayground"
             xmlns:semi="https://irihi.tech/semi"
             xmlns:ursa="https://irihi.tech/ursa/themes/semi"
             xmlns:themes="clr-namespace:AvaloniaControlPlayground.Themes"
             RequestedThemeVariant="Default">

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <semi:SemiTheme Locale="zh-CN" />
        <ursa:SemiTheme Locale="zh-CN"/>
        <themes:AppTheme />
    </Application.Styles>
</Application>