<UserControl
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:u="https://irihi.tech/ursa"
  xmlns:controls="clr-namespace:AvaloniaControlPlayground.Controls"
  xmlns:pages="clr-namespace:AvaloniaControlPlayground.Pages"
  mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
  x:Class="AvaloniaControlPlayground.Pages.ArrowedContentControlPage">
  <DockPanel>
    <u:Form DockPanel.Dock="Right" Width="300" Margin="8">
      <Slider u:FormItem.Label="Width" Name="WidthSlider" Minimum="100" Maximum="600" Value="200" />
      <Slider u:FormItem.Label="Height" Name="HeightSlider" Minimum="100" Maximum="600" Value="100" />
      <Slider u:FormItem.Label="StrokeThickness" Name="StrokeThicknessSlider" Minimum="0" Maximum="10" Value="1" />
      <CheckBox u:FormItem.Label="ShowArrow" Name="ShowArrowCheckBox" IsChecked="True" />
      <u:EnumSelector
        u:FormItem.Label="ArrowPlacement"
        EnumType="controls:ArrowPlacement"
        Name="ArrowPlacementSelector"
        HorizontalAlignment="Stretch"
        Value="{x:Static controls:ArrowPlacement.BottomEdgeAlignedLeft}" />
      <Slider u:FormItem.Label="ArrowSize" Name="ArrowSizeSlider" Minimum="5" Maximum="200" Value="20" />
      <Slider u:FormItem.Label="ArrowRadius" Name="ArrowRadiusSlider" Minimum="0" Maximum="50" Value="2" />
      <Slider u:FormItem.Label="ArrowRatio" Name="ArrowRatioSlider" Minimum="0" Maximum="5" Value="1" />
      <Slider u:FormItem.Label="ArrowOffset" Name="ArrowOffsetSlider" Minimum="0" Maximum="200" Value="20" />
      <CheckBox u:FormItem.Label="ShowContent" Name="ShowContentCheckBox" IsChecked="True" />
      <Slider
        u:FormItem.Label="Padding"
        Name="PaddingSlider"
        Minimum="{Binding #StrokeThicknessSlider.Value}"
        Maximum="50"
        IsEnabled="{Binding #ShowContentCheckBox.IsChecked}" />
    </u:Form>
    <controls:ArrowedContentControl
      Fill="Bisque"
      Stroke="HotPink"
      StrokeThickness="{Binding #StrokeThicknessSlider.Value}"
      Width="{Binding #WidthSlider.Value}"
      Height="{Binding #HeightSlider.Value}"
      ShowArrow="{Binding #ShowArrowCheckBox.IsChecked}"
      ArrowPlacement="{Binding #ArrowPlacementSelector.Value}"
      ArrowSize="{Binding #ArrowSizeSlider.Value}"
      ArrowRadius="{Binding #ArrowRadiusSlider.Value}"
      ArrowRatio="{Binding #ArrowRatioSlider.Value}"
      ArrowOffset="{Binding #ArrowOffsetSlider.Value}"
      Padding="{Binding #PaddingSlider.Value, Converter={x:Static pages:ArrowedContentControlPage.DoubleThicknessConverter}}">
      <TextBlock
        Name="ArrowContext"
        TextWrapping="Wrap"
        IsVisible="{Binding #ShowContentCheckBox.IsChecked}"
        Margin="{Binding #PaddingSlider.Value}" />
    </controls:ArrowedContentControl>
  </DockPanel>
</UserControl>